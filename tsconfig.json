{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
